rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Imágenes de perfil (profile_images/)
    match /profile_images/{fileName} {
      allow read: if request.auth != null;
      // fileName debe ser userId.jpg
      allow write: if request.auth != null &&
                     fileName == request.auth.uid + '.jpg';
    }

    // Perfiles de usuario
    match /profiles/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Stories
    match /stories/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Mensajes de chat
    match /chats/{chatId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Mensajes de grupo
    match /groups/{groupId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Imágenes de grupo - permitir lectura a usuarios autenticados y escritura a miembros
    match /group_images/{groupId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
